<!-- PORTFOLIO SECTION START -->
    <section id="portfolio" class="section">
        <div class="container-fluid section-wrapper">
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h2 class="section-title">My Latest Work</h2>

                        <p class="section-subtitle">I'm looking to expand my portfolio while I'm on top and while I'm young.</p>

                        <span class="divider center"></span>
                    </div>
                    <!-- //.col-md-12 -->
                </div>
                <!-- //.row -->
                
                <div class="row">
                    <div class="col-md-12">
                        <ul class="filterable-portfolio-nav list-inline text-center">
                            <li class="active">
                                <a href="#" data-filter="*" class="btn btn-sm btn-custom disabled">All</a>
                            </li>

                            <li>
                                <a href="#" data-filter=".design" class="btn btn-sm btn-custom">Design</a>
                            </li>
                            
                            <li>
                                <a href="#" data-filter=".web" class="btn btn-sm btn-custom">Web App</a>
                            </li>
                            
                            <li>
                                <a href="#" data-filter=".mobile" class="btn btn-sm btn-custom">Mobile App</a>
                            </li>
                        </ul>
                    </div>
                    <!-- //.col-md-12 -->
                </div>
                <!-- //.row -->
                
                <!-- PORTFOLIO START -->
                <div class="portfolio">
                    <div class="row filterable-portfolio">
                    <% @projects.each do |project| %>
                    <div class="item <%= project.projectcategory %> col-sm-6 col-md-3">
                            <div class="project-wrapper">
                                <div class="project-link">
                                    <a href="<%= project.picture %>" class="zoom" title="Buzz Lightyear">
                                        <i class="icon-Full-Screen"></i>
                                    </a>

                                    <%= link_to raw("<i class='icon-Link'></i>"), "http://#{project.projectlink}", :target => "_blank", class: "external-link" %>
                                
                                </div>
                                <!-- //.project-link -->

                                <div class="project-title">
                                    <h4><%= project.projecttitle %></h4>

                                </div>
                                <!-- //.project-title -->

                                <%= image_tag(project.picture.url, size: "768x590", class: "img-responsive") if project.picture? %>
                            </div>
                            <!-- //.project-wrapper -->
                        </div>
                        <!-- //.item -->
                    <% end %>
                    </div>
                    <!-- //.row -->
                </div>
                <!-- PORTFOLIO END -->
                <% if !@projects.any? %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="launch text-center">
                            <a href="#" class="btn btn-lg btn-custom">Show All</a>
                        </div>
                        <!-- //.launch -->
                    </div>
                    <!-- //.col-md-12 -->
                </div>
                <% end %>
                <!-- //.row -->
            </div>
            <!-- //.section-content -->
        </div>
        <!-- //.container-fluid -->
    </section>
    <!-- //PORTFOLIO SECTION END -->
