<!-- CONTACT SECTION START -->
    <section id="contact" class="section">
        <div class="container section-wrapper">
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h2 class="section-title">Resend confirmation instructions</h2>
                        <p class="section-subtitle">
                            You made a right choice
                        </p>
                        <%= render "devise/shared/links" %>
                        <span class="divider center"></span>
                    </div>
                    <!-- //.col-md-12 -->
                </div>
                <!-- //.row -->
                
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">

                        <!-- CONTACT FORM START -->
                        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), :html => { :method =>'post', :name => 'contact-form', :id => 'contact-form', :class => 'contact-form validate element-line', :role => 'form' }) do |f| %>
                        <%= devise_error_messages! %>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="input-group input-group-lg">
                                            <%= f.email_field :email, id: "password", class: "form-control required", placeholder: "New password", autocomplete: "off", required: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
                                        </div>
                                        <!-- //.input-group -->
                                    </div>
                                    <!-- //.form-group -->
                                </div>
                                <!-- //.col-md-12 -->
                            </div>
                            <!-- //.row -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                    <%= button_tag(type: 'submit', id: 'submit') do %>
                                        Resend confirmation instructions
                                    <% end %>
                                    </div>
                                    <!-- //.form-group -->
                                </div>
                                <!-- //.col-md-12 -->
                            </div>
                            <!-- //.row -->
                        <% end %>
                        <!-- //CONTACT FORM END -->

                    </div>
                    <!-- //.col-md-8 -->
                </div>
                <!-- //.row -->
            </div>
            <!-- //.section-content -->
        </div>
        <!-- //.container -->
    </section>
    <!-- //CONTACT SECTION END -->